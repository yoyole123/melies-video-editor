{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "outDir": "./dist/types",
    "rootDir": "./src",

    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/lib/index.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["src/main.tsx"]
}
